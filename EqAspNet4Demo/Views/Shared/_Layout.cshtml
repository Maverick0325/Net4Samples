

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["IsIndexPage"] == null ? @ViewData["Title"] + " - " : "")EasyQuery library samples</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
          crossorigin="anonymous"
          integrity="sha256-eSi1q2PG6J7g7ib17yAaWMcrr5GrtohYChqibrV7PBE=" />

    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/themes/flick/jquery-ui.css">

    <link rel="stylesheet" href="~/Content/root.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />

    @RenderSection("Styles", required: false)

</head>
<body>

    <header class="navbar border-bottom mb-3 p-0 container-fluid px-5">
        <div class="header my-2">
            <a href="~/"><div class="logo-title">EasyQuery Demo</div></a>
            <!--<div class="sub-title">User-friendly ad-hoc query builder for your web-site</div>-->
        </div>
        @Html.Partial("_LoginPartial")
        <div class="nav-item dropdown project-dropdown">
            <a class="nav-item nav-link dropdown-toggle mr-md-2" href="#" id="bd-versions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                @ViewData["MenuTitle"]
            </a>
            <div class="dropdown-menu dropdown-menu-right project-menu" aria-labelledby="bd-versions">
                @Html.ActionLink("Menu", "Index", "Home", null, new { @class = "dropdown-item" })
                <div class="dropdown-divider"></div>
                @Html.ActionLink("Advanced Search demo", "AdvancedSearch", "Home", null, new { @class = "dropdown-item" })
                <div class="dropdown-divider"></div>
                @Html.ActionLink("Ad-hoc reporting demo", "AdHocReporting", "Home", null, new { @class = "dropdown-item" })
                <div class="dropdown-divider"></div>
                @Html.ActionLink("Data Filtering demo", "Index", "Order", null, new { @class = "dropdown-item" })
                <div class="dropdown-divider"></div>
                @Html.ActionLink("Full-text Search demo", "Index", "Customer", null, new { @class = "dropdown-item" })
            </div>
        </div>
    </header>
    <div class="global-message"></div>

    @RenderBody()

    <footer class="footer container-fluid px-5">
        <div class="float-right">Powered by <a href="https://korzh.com/easyquery">EasyQuery</a></div>
        <div>Copyright 2019 © <a href="https://korzh.com">Korzh.com</a></div>
    </footer>

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/jquery-ui.min.js" type="text/javascript"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"
            integrity="sha256-E/V4cWE4qvAeO5MOhjtGtqDzPndRO1LBk8lJ/PR7CA4=">
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" type="text/javascript"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
